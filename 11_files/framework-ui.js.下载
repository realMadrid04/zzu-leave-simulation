    }
    $.modalConfirm(options.prompt, function (r) {
        if (r) {
            // $.loading(true, options.loading);
            window.setTimeout(function () {
                $.ajax({
                    url: options.url,
                    data: options.param,
                    type: "post",
                    dataType: "json",
