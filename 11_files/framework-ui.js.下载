$.modalConfirm = function (content, callBack) {
    top.layer.confirm(content, {
        icon: "fa-exclamation-circle",
        title: "系统提示",
        btn: ['确认', '取消'],
        btnclass: ['btn btn-primary', 'btn btn-danger'],
    }, function () {
        callBack(true);
    }, function () {
        callBack(false)
    });
}
$.modalAlert = function (content, type, href) {

    var icon = 7;
    if (type == 1) {
        icon = 1;//执行成功！(对号)
    }
    if (type == 2) {
        icon = 2;//执行失败（x）
    }
    if (type == 3)
        icon = 3;//?
    if (type == 7) {
        icon = 7;//!
    }
    if (type == 4)
        icon = 4;//?
    if (type == 5) {
        icon = 5;//!
    } if (type == 7) {
        icon = 7;//!
    }
    top.layer.alert(content, {
        icon: icon,
        title: "消息提醒",
        btn: ['确认'],
        btnclass: ['btn btn-primary']
    },
    function (index) {
        top.layer.close(index);//关闭本窗口
        $.modalClose();
        location.href = href;

    });
}
$.modalAlertAdmin = function (content) {
    var icon = 3;
    top.layer.alert(content, {
        icon: icon,
        title: "系统提示",
        btn: ['确认'],
        btnclass: ['btn btn-primary'],
    }, function () {
        // location.href = "http://pub.zzu.edu.cn:8088";
    });
}
$.modalMsg = function (content, type) {
    var icon = 7;
    if (type != undefined) {
        if (type == 1) {
            icon = 1;//执行成功！(对号)
        }
        if (type == 2) {
            icon = 2;//执行失败（x）
        }
        if (type == 3)
            icon = 3;//?
        if (type == 7) {
            icon = 7;//!
        }
        if (type == 4)
            icon = 4;//?
        if (type == 5) {
            icon = 5;//!
        } if (type == 7) {
            icon = 7;//!
        }
        top.layer.msg(content, { icon: icon, time: 4000, shift: 5 }, function () { $.reload(); }

        );
        top.$(".layui-layer-error_msg").find('i.' + icon).parents('.layui-layer-error_msg').addClass('layui-layer-error_msg-' + type);
    } else {
        top.layer.msg(content, function () { $.reload() });
    }
}
$.modalClose = function () {
    var index = top.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
    var $IsdialogClose = top.$("#layui-layer" + index).find('.layui-layer-btn').find("#IsdialogClose");
    var IsClose = $IsdialogClose.is(":checked");
    if ($IsdialogClose.length == 0) {
        IsClose = true;
    }
    if (IsClose) {
        top.layer.close(index);
        parent.location.reload();
    } else {
        $.reload();
    }
}

//导出数据
$.exportForm = function (options) {
    var defaults = {
        prompt: "确定导出数据？",
        url: "",
        param: [],
        loading: "正在提交数据...",
        success: null,
        close: true
    };
    var options = $.extend(defaults, options);
    //$.loading(true, options.loading);
    window.setTimeout(function () {
        if ($('[name=__RequestVerificationToken]').length > 0) {
            options.param["__RequestVerificationToken"] = $('[name=__RequestVerificationToken]').val();
        }
        $.ajax({

            url: options.url,
            data: options.param,
            type: "post",
            dataType: "json",
            success: function (data) {
                // options.success(data);
                // $.table.exportFile('dg', data.data, 'csv');
                //$.modalAlert(data.error_msg, data.code);

            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {

                $.modalMsg(errorThrown, false);
            },
            beforeSend: function () {
                $.loading(true, options.loading);
            },
            complete: function () {
                $.loading(false);
            }
        });
    }, 500);
}

//提交
$.submitForm = function (options, herf) {
    var defaults = {
        prompt: "",
        url: "",
        param: [],
        loading: "正在提交数据...",
        success: null,
        close: true
    };
    var options = $.extend(defaults, options);
    //$.loading(true, options.loading);
    window.setTimeout(function () {
        if ($('[name=__RequestVerificationToken]').length > 0) {
            options.param["__RequestVerificationToken"] = $('[name=__RequestVerificationToken]').val();
        }
        $.ajax({
            url: options.url,
            data: options.param,
            type: "post",
            dataType: "json",
            success: function (data) {
                $.modalAlert(data.error_msg, data.type, herf);

            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {

                $.modalMsg(errorThrown, false);
            },
            beforeSend: function () {
                $.loading(true, options.loading);
            },
            complete: function () {
                $.loading(false);
            }
        });
    }, 500);
}

